{
  //
  // Disable editor links, which is enabled by default:
  //

  "editor.links": false,

  //
  // The files and folders that should not be shown in the workspace explorer:
  //

  "files.exclude": { "**/node_modules": true, "**/bun.lock": true },

  //
  // Associate `*.zen` files with HTML to enable language features:
  //

  "files.associations": { "*.zen": "html" },

  //
  // Options controlling the formatting of HTML files:
  //

  "html.format.extraLiners": "body",
  "html.format.indentInnerHtml": true,

  //
  // Options controlling the formatting of JSON files:
  //

  "json.format.enable": true,
  "json.format.keepLines": true,

  //
  // Options controlling the formatting of JavaScript files:
  //

  "javascript.format.enable": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,

  //
  // Options controlling the formatting of TypeScript files:
  //

  "typescript.format.enable": true,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": true,

  //
  // Regular expressions used for syntax highlighting:
  //
  // "Highlight" extension @ https://marketplace.visualstudio.com/items?itemName=fabiospampinato.vscode-highlight
  //

  "highlight.regexes":
  {
    //
    // --- Zenplate template syntax ---
    //

    // Interpolated variables:

    "(\\{)(\\$\\w+)((?:\\.\\w+)*)(!)?(\\})":
    {
      "decorations": [
        { "color": "#b0a38e" }, // opening brace
        { "color": "#a2aa67" }, // variable name
        { "color": "#d4b585" }, // object path
        { "color": "#fb4934" }, // modifier
        { "color": "#b0a38e" }, // closing brace
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // Variables used in block openers:

    "(?<!\\{)(\\$\\w+)((?:\\.\\w+)*)":
    {
      "decorations": [
        { "color": "#83a598" }, // variable name
        { "color": "#d4b585" }, // object path
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // `each`, `with`, `without`, and `when` blocks:

    "(?<=\\s)(#each|#with|#without|#when)(?=\\s)":
    {
      "decorations": [
        { "color": "#d3869b" } // keyword
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // `in` and `not` keywords:

    "(?<=\\s)(in|not)(?=\\s\\$)":
    {
      "decorations": [
        { "color": "#d3869b" } // keyword
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // target variable or destructured variables:

    "(?<=#each\\s+)(\\w+(?:\\s*,\\s*\\w+)*)(?=\\s+in\\s+\\$)":
    {
      "decorations": [
        { "color": "#d4b585" } // ?
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // `else:` and `end` blocks
    "(?<=\\r?\\n\\s*)(end|else):?(?=\\r?\\n|$)":
    {
      "decorations": [
        { "color": "#d3869b" } // keyword
      ],

      "filterFileRegex": ".*\\.zen"
    },

    //
    // --- HTML elements and attributes ---
    //

    // The opening bracket of an HTML element:

    "(<)(?=/|[a-z])":
    {
      "decorations": [
        { "color": "#d79921" }, // opening bracket
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The closing bracket of an HTML element:

    "(?<=/|[a-z0-9])(>)":
    {
      "decorations": [
        { "color": "#d79921" }, // closing bracket
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The name of an HTML element:

    "(?<=/|<)([a-z][a-z0-9-]*)(?=\\s|>)":
    {
      "decorations": [
        { "color": "#a89984" }, // element name
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The closing slash of an HTML element:

    "((?<=\\s|<)/(?=[a-z]|>))":
    {
      "decorations": [
        { "color": "#d79921" } // closing slash
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The name of an HTML attribute:

    "(?<=(?:<[a-z][a-z0-9]*|\")\\s)([a-z][a-z0-9]+(?:-[a-z0-9]+)*=)":
    {
      "decorations": [
        { "color": "#d79921" } // attribute name
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The value of an HTML attribute (double-quoted):

    "(\")":
    {
      "decorations": [
        { "color": "#d4b585" } // ?
      ],

      "filterFileRegex": ".*\\.zen"
    },

    // The value of an HTML attribute (without quotes):

    "(?<=\")([\\w\\d\\s,._=-]+)(?=\")":
    {
      "decorations": [
        { "color": "#d4b585" } // ?
      ],

      "filterFileRegex": ".*\\.zen"
    }
  }
}